<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="186dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/tv_cancel_for_float_edit_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel_for_float_edit_activity"
            android:textColor="#71777D"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_title_for_float_edit_activity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=" "
            android:textColor="#2B333B"/>

        <TextView
            android:id="@+id/tv_send_for_float_edit_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_for_float_edit_activity"
            android:textColor="#71777D"
            android:textSize="14sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#D9DDE1"/>

    <EditText
        android:id="@+id/et_content_for_float_edit_activity"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@null"
        android:gravity="top"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:paddingRight="20dp"
        android:paddingBottom="16dp"
        android:textColor="#2B333B"
        android:textColorHint="#B7BBBF"
        android:textCursorDrawable="@null"
        android:textSize="16sp"/>
</LinearLayout>