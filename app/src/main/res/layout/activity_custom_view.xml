<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ly.sample.activity.CustomViewActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="主页->自定义View"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <com.actor.myandroidframework.widget.BaseRatingBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:transitionName="btn"
        app:brbRating="3.3"/>

    <com.actor.myandroidframework.widget.BaseRatingBar
        android:id="@+id/base_rating_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:brbFullDrawable="@drawable/star_full"
        app:brbIsIndicator="false"
        app:brbNumStars="6"
        app:brbRating="3.3"
        app:brbRatio="0.7"
        app:brbStarHeight="60dp"
        app:brbStarInterval="10dp"
        app:brbStepSize="0.1"/>

    <com.actor.myandroidframework.widget.BaseRatingBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:brbEmptyDrawable="@drawable/star_empty"
        app:brbFullDrawable="@drawable/star_full"
        app:brbIsIndicator="false"
        app:brbNumStars="5"
        app:brbRating="3.3"
        app:brbRatio="2"
        app:brbStarHeight="35dp"
        app:brbStarInterval="1dp"
        app:brbStepSize="0.2"/>

    <com.actor.myandroidframework.widget.BaseRatingBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:brbEmptyDrawable="@drawable/star_empty"
        app:brbFullDrawable="@drawable/star_full"
        app:brbIsIndicator="false"
        app:brbNumStars="5"
        app:brbRating="3.3"
        app:brbRatio="0.5"
        app:brbStarHeight="90dp"
        app:brbStarInterval="10dp"
        app:brbStepSize="0.5"/>
</LinearLayout>
